<?xml version="1.0" encoding="UTF-8"?>
<document xmlns="http://www.skyve.org/xml/document" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="ChangePassword" xsi:schemaLocation="http://www.skyve.org/xml/document ../../../schemas/document.xsd">
    <abstract>false</abstract>
    <singularAlias>Change Password</singularAlias>
    <pluralAlias>Change Passwords</pluralAlias>
    <audited>false</audited>
    <iconStyleClass>fa fa-unlock-alt</iconStyleClass>
    <bizKey expression="Change Password"/>
    <attributes>
        <text trackChanges="true" name="oldPassword">
            <documentation><![CDATA[The old password is not always required to change the password as the
					self service reset password function cannot demand the user for their old password.]]></documentation>
            <displayName>admin.changePassword.oldPassword.displayName</displayName>
            <description><![CDATA[admin.changePassword.oldPassword.description]]></description>
            <length>50</length>
        </text>
        <text required="true" trackChanges="true" name="newPassword">
            <displayName>admin.changePassword.newPassword.displayName</displayName>
            <description><![CDATA[admin.changePassword.newPassword.displayName]]></description>
            <length>50</length>
        </text>
        <text required="true" trackChanges="true" name="confirmPassword">
            <displayName>admin.changePassword.confirmPassword.displayName</displayName>
            <description><![CDATA[admin.changePassword.confirmPassword.description]]></description>
            <length>50</length>
        </text>
        <text trackChanges="true" name="response">
            <displayName>Response</displayName>
            <length>200</length>
        </text>
    </attributes>
</document>